---

env:
    browser: true
    node: true
    es6: true

globals:
    __DEV__: true

ecmaFeatures:
    jsx: true
    modules: true

rules:
    # ERRORS
    space-before-blocks: 2
    no-trailing-spaces: 2
    indent: [2, 4, indentSwitchCase: true]
    brace-style: 2
    space-after-keywords: 2
    strict: 2
    no-comma-dangle: 2
    no-unused-expressions: 2
    block-scoped-var: 2
    eol-last: 2
    dot-notation: 2
    consistent-return: 2
    no-unused-vars: [2, args: none]
    quotes: [2, 'single']
    no-use-before-define: 2
    comma-spacing: [0, {"before": true, "after": true}]

    # WARNINGS
    max-len: [1,120]

    # DISABLED
    no-underscore-dangle: 0
    new-cap: 0
